    {
      "title": "Essential Commands",
      "items": [
        {
          "command": "claude",
          "description": "Start interactive session",
          "category": "basics"
        },
        {
          "command": "claude \"task description\"",
          "description": "Execute specific task",
          "category": "basics",
          "example": "claude \"Create a user model with authentication\""
        },
        {
          "command": "claude --think \"complex task\"",
          "description": "Extended thinking mode for complex problems",
          "category": "advanced",
          "example": "claude --think \"Design a scalable authentication system\""
        },
        {
          "command": "claude /review [file]",
          "description": "Code review with security & performance analysis",
          "category": "review",
          "example": "claude /review auth.js"
        }
      ]
    },
